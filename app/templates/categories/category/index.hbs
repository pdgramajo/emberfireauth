        <div class="row">
          {{#if session.isAuthenticated }}
              {{#ember-remodal title='Agregar un Trago' as |m|}}
                {{#m.open}}
                  <button {{action 'openModal'}} class="btn btn-primary">Agregar Trago</button>
                {{/m.open}}
                <div class="content">
                    <form>
                      <div class="form-group">
                        <label for="name">Nombre</label>
                        {{input value=name class="form-control" type="text" }}
                      </div>
                      <div class="form-group">
                        <label for="title">Descripcion</label>
                        {{textarea value=description cols="80" rows="6"}}
                      </div>
                      <div class="form-group">
                    		    <label for="exampleInputImage">Image</label>
                    		   {{img-upload name="files" multiple=false action=(action "selectedFiles") alt="Choose a File" resetComp=resetInputFileComp}}
                      </div>
                    </form>
                </div>
                <div class="actions">
                  {{#m.cancel}}
                    <button class="btn btn-danger">Cancel!</button>
                  {{/m.cancel}}
                  {{#m.confirm}}
                    <button {{action 'save'}} class="btn btn-success">Confirm!</button>
                  {{/m.confirm}}
                </div>
              {{/ember-remodal}}
          {{/if}}
        </div>
        <div class="row">
            <p>
                {{model.title}} <hr>
                <img src="{{model.imageUrl}}" class="img-responsive img-thumbnail	" alt="">
            </p>
            {{#each model.drinks as |drink|}}
            
                 {{custom-thumbnail 
                 title=drink.name
                 imageUrl= drink.imageUrl
                 data=drink 
                 }}
            
            {{/each}}
        </div>
{{outlet}}